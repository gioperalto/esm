<section class="member container">
	<div class="row">
		<div class="history-header">
			<h1><img src="<%-user.picture%>" width="50" height="50"> &nbsp; <%-user.username%></h1>
		</div>
	</div>
	<div class="row">
		<h1>My Team</h1>
	</div>
	<% var team_elo = 0;%>
	<div class="row">
		<!-- Nav tabs -->
		<ul class="nav nav-tabs" role="tablist">
		  <li class="active"><a href="#lol" role="tab" data-toggle="tab">League of Legends</a></li>
		</ul>

		<!-- Tab panes -->
		<div class="tab-content">
		  <div class="tab-pane active" id="lol">
			<table class="table">
			  <thead>
			  	<tr>
			  		<th></th>
			  		<th>Player Name</th>
			  		<th>Role</th>
			  		<th>ELO</th>
			  		<th>Rank</th>
			  		<th>Mood</th>
			  		<th>Age</th>
			  		<th>Cost</th>
			  		<th>Match History</th>
			  		<th>Offers</th>
			  	</tr>
			  </thead>
			  <tbody>
			  	<%for(var i = 0; i < players.length; i++) {
			  		team_elo += players[i].visible_elo;%>
			  	<tr>
			  		<td><img src="<%-players[i].picture%>" width="25" height="25"></td>
			  		<td><%-players[i].name%></td>
			  		<td><%-players[i].role%></td>
			  		<td><%-players[i].visible_elo%></td>
			  		<td><%-players[i].rank%></td>
			  		<td><%-players[i].mood%></td>
			  		<td><%-players[i].age%></td>
			  		<td>$<%-players[i].value%></td>
			  		<td><a href="/player/history?id=<%-players[i].id%>" class="btn btn-info btn-sm">View History</a></td>
					<td><a href="/player/offers?id=<%-players[i].id%>" class="btn btn-warning btn-sm">View Offers</a></td>
			  	</tr>
			  	<%}%>
			  </tbody>
			</table>
		  </div>
		</div>
	</div>
	<div class="row">
		<h3>Team ELO: <%-team_elo%></h3>
	</div>
</section>